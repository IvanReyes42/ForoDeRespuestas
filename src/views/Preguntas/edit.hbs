<div class="container p-4">
  {{>message}}

    <div class="row">
        <div class="col-md-10 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Editar Problematica</h3>
                </div>
                <div class="card-body">
                        <form action="/MisPreguntas/edit/{{Problema.IdProblema}}" method="POST">
                            <div class="form-group">
                                <input type="text" name="Titulo" placeholder="Titulo" class="form-control" value="{{Problema.Titulo}}" autofocus required>
                            </div>
                            <div class="form-group">
                                <label for="Descripcion">Descripci√≥n</label>
                                <textarea class="form-control" id="Descripcion" rows="5" name="Descripcion" required>{{Problema.Descripcion}}</textarea>
                            </div>
                            <div class="form-group">
                                <input type="text" name="Categorias" placeholder="Categorias" class="form-control" value="{{Problema.Categorias}}" required>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-success">
                                    Guardar
                                </button>
                            </div>
                        </form>
                    </div>
            </div>
        </div>
    </div>
</div>