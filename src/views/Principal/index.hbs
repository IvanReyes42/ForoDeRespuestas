<div class="container p-4">
    <div class="row">
        <div class="col-md-12 text-center">
            <h2>Foro de Preguntas</h2>
            <h5>Preguntas Principales</h5>
            <hr>
        </div>
        
        <div class="col-md-12">
            <form action="/" method="post">
                <div class="form-row">
                    <div class="col-md-7">
                         <input type="text" class="form-control" placeholder="Buscar Pregunta" name="Buscar" autofocus>
                    </div>
                    <div class="col-md-4">
                         <input type="text" class="form-control" placeholder="Buscar por Categoria" name="Categoria">
                    </div>
                    <div class="col-md-1">
                         <button class="btn">
                             <i class='bx bx-search'></i>
                         </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

{{#each Preguntas}}

<div class="container p-4">
    <div class="row">
        <div class="col-md-12 mx-auto">
            <div class="card ">
                <div class="card-header text-center">
                   <div class="row">
                       <div class="col-md-7">
                            <h5>{{Titulo}}</h5>
                       </div>
                       <div class="col-md-3">
                            <h5>User: {{UserName}}</h5>
                       </div>
                       <div class="col-md-1">
                            <a href="/Respuestas/{{IdProblema}}" class="btn btn-info">Ver Respuestas</a>
                       </div>
                   </div>
                </div>  
                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            <p>{{Descripcion}}</p>
                        </div>
                        <div class="col-12">
                            <img src="images/{{Imagen}}" alt="" class="img-fluid">
                        </div>
                        <hr>
                        <div class="col-12">
                            Categorias: 
                            <p style="color: blue;">{{Categorias}}</p>
                        </div>
                    </div>  
                </div>
            </div>
            <hr>
        </div>
    </div>
</div>




{{/each}}
